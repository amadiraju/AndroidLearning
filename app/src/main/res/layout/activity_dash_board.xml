<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".DashBoard">

        <TextView
            android:id="@+id/my_text_view"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/my_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_light"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/button_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_margin="10dp" />

        <Button
            android:id="@+id/button_nine_patch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nine Patch"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/button_with_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a button with a custom drawable"
            android:background="@drawable/drawable_blue_background"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/button_with_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a button with a custom drawable"
            android:background="@drawable/selector_button"
            android:textColor="@android:color/holo_orange_dark"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button_with_image_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a button with an image selector"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_image_button"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_with_image_selector_no_text"
                android:layout_width="@dimen/orange_button_width"
                android:layout_height="@dimen/orange_button_height"
                android:text="O_o"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_image_button"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/button_with_image_selector_no_text_1"
                android:layout_width="@dimen/orange_button_width"
                android:layout_height="@dimen/orange_button_height"
                android:text="O_o"
                android:textColor="@android:color/white"
                android:background="@drawable/ic_button_orange"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

</LinearLayout>
